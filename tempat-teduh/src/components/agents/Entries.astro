---
const { name, role, officeAddress, office, contact, avatar, url } = Astro.props;
---

<a

  href={url}
  title={name}
  aria-label={name}
  class="relative isolate flex flex-col gap-8 lg:flex-row text-sm 2xl:text-base
  py-8">
  <div
    class="relative aspect-[4/4] sm:aspect-[4/4] lg:aspect-square lg:w-64 lg:shrink-0">
    <img
      src={avatar}
      alt={name}
      class="absolute inset-0 h-full w-full object-cover"
    />
    <div class="absolute inset-0"></div>
  </div>
  <div class="flex flex-col divide-y h-full gap-2 w-full">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 w-full">
      <div>
        <h3 class="text-black">
          {name}
        </h3>
        <p class="mt-2 text-gray-500">
          {role}
        </p>
      </div>
      <div class="lg:ml-auto">
        <p class="text-black">Contact</p>
        {
          contact.map((contact) => (
            <>
              <p class="text-gray-500">{contact.item}</p>
            </>
          ))
        }
      </div>
    </div>
    <div class="pt-8 mt-8">
      <p class="text-black">{office}</p>
      <p class="text-gray-500">{officeAddress}</p>
    </div>
  </div>
</a>
