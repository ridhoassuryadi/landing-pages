---
const { title, url, description, pubDate, image, avatar, author } = Astro.props;
---

<a
  href={url}
  title={title}
  class="text-xs 2xl:text-sm  grid grid-cols-1 xl:grid-cols-2 gap-4 items-center">
  <div class="overflow-hidden group">
    <img
      src={image}
      alt={title}
      class="aspect-[4/6] 2xl:aspect-[4/3] object-cover object-center group-hover:scale-110 transition-transform duration-500"
    />
  </div>

  <div class="w-full divide-y">

    <div class="gap-4 py-4">
      <p class="text-black text-base 2xl:text-xl">
        {title}
      </p>
      <p class="text-gray-500 text-sm mt-4">{description}</p>
    </div>
  </div>
</a>
