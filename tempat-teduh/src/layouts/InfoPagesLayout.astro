---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="overflow-hidden">
    <div class="px-8 pb-12">
      <div
        data-aos="zoom-out"
        data-aos-duration="1500"
        class="relative">
        <img
          class="w-full h-96 object-cover grayscale relative"
          src="https://images.unsplash.com/photo-1469964062538-06fad433a132?q=80&w=2669&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt=""
        />
        <div
          class="absolute bg-white bottom-0 right-0 p-8 w-full md:max-w-xs flex flex-col">
          <p class="text-sm">Quartiere / Real Estate</p>
          <p>
            <a
              class="text-xs"
              href="tel:+1-202-555-0123"
              >Tel: (202) 555-0123</a
            >
          </p>
        </div>
      </div>
      <div
        class="pt-8 mt-40 border-t grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div>
          <h1 class="text-3xl       text-black">
            {frontmatter.page}
          </h1>
          <p class="mt-6 text-pretty text-gray-500 2xl:text-lg">
            Effective date: {frontmatter.pubDate.toString().slice(0, 10)}
          </p>
        </div>
        <div class="lg:col-span-2">
          <div class="prose-styles -mt-8">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
