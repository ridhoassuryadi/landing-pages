---
// Define the services and their statuses
const services = [
  { name: "API", status: "Operational", statusColor: "text-green-500" },
  { name: "Builds", status: "Not Operational", statusColor: "text-red-500" },
  {
    name: "Certificates",
    status: "Operational",
    statusColor: "text-green-500",
  },
  { name: "Dashboard", status: "Operational", statusColor: "text-green-500" },
  { name: "DNS", status: "Operational", statusColor: "text-green-500" },
  {
    name: "Domain Registration",
    status: "Operational",
    statusColor: "text-green-500",
  },
  { name: "Logs", status: "Operational", statusColor: "text-green-500" },
];
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
    <div class="relative items-center">
      <div class="w-full lg:inline-flex justify-between lg:items-center">
        <div class="max-w-xl">
          <span
            class="text-xs text-purple-900 uppercase font-bold tracking-wide"
            >Status</span
          >
          <p
            class="text-4xl mt-8 font-semibold tracking-tighter text-purple-900">
            All systems Operational
          </p>
        </div><div class="mt-12 flex flex-col sm:flex-row lg:ml-auto">
          <a
            class="text-purple-600 text-sm bg-white border border-gray-300 flex font-semibold hover:text-purple-500 items-center justify-center px-4 py-2 rounded-lg transition-all h-10"
            title="link to your page"
            aria-label="your label"
            href="/signup"
            >Subscribe for updates &nbsp;&nbsp; â†’</a
          >
        </div>
      </div>
    </div>

    <ol
      role="list"
      class="relative gap-y-10 divide-y mt-12">
      {
        services.map((service) => (
          <li class="py-4 inline-flex items-center justify-between w-full">
            <div class="flex flex-col">
              <span class="text-base text-purple-900">{service.name}</span>
            </div>
            <p class={`${service.statusColor} text-xs`}>{service.status}</p>
          </li>
        ))
      }
    </ol>

  </div>
</section>
