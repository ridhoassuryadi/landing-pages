---
import Sidebar from "./Sidebar.astro";
---

<section>
  <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
    <div class="max-w-2xl">
      <span class="text-xs font-bold tracking-wide uppercase text-purple-500">
        Login conexions</span
      >
      <p class="mt-8 text-4xl font-semibold tracking-tight text-purple-900">
        Control the apps conected to Semplice
      </p>
    </div>

    <div
      class="grid items-start grid-cols-1 gap-4 mt-12 lg:grid-cols-4 lg:gap-24">
      <Sidebar />
      <div class="lg:col-span-3">
        <div class="space-y-6 lg:col-span-3">
          <div class="rounded-md bg-white shadow-sm">
            <div class="p-4">
              <span class="text-xl font-medium leading-tight text-purple-900"
                >Add new
              </span>

              <div class="mt-2">
                <div
                  class="justify-center gap-3 mt-6 lg:inline-flex lg:items-center">
                  <div class="mt-3 sm:mt-0">
                    <a
                      title="link to your page"
        aria-label="your label" href="#"
                      class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold transition-all bg-white border border-gray-300 rounded-lg text-purple-600 hover:text-purple-500">
                      <span>
                        <svg
                          aria-label="github"
                          height="20"
                          viewBox="0 0 14 14"
                          width="20"
                          ><path
                            d="M7 .175c-3.872 0-7 3.128-7 7 0 3.084 2.013 5.71 4.79 6.65.35.066.482-.153.482-.328v-1.181c-1.947.415-2.363-.941-2.363-.941-.328-.81-.787-1.028-.787-1.028-.634-.438.044-.416.044-.416.7.044 1.071.722 1.071.722.635 1.072 1.641.766 2.035.59.066-.459.24-.765.437-.94-1.553-.175-3.193-.787-3.193-3.456 0-.766.262-1.378.721-1.881-.065-.175-.306-.897.066-1.86 0 0 .59-.197 1.925.722a6.754 6.754 0 0 1 1.75-.24c.59 0 1.203.087 1.75.24 1.335-.897 1.925-.722 1.925-.722.372.963.131 1.685.066 1.86.46.48.722 1.115.722 1.88 0 2.691-1.641 3.282-3.194 3.457.24.219.481.634.481 1.29v1.926c0 .197.131.415.481.328C11.988 12.884 14 10.259 14 7.175c0-3.872-3.128-7-7-7z"
                            fill="currentColor"
                            fill-rule="nonzero"></path>
                        </svg>
                      </span>
                      <span class="ml-3">GitHub</span>
                    </a>
                  </div>
                  <div class="mt-3 sm:mt-0">
                    <a
                      title="link to your page"
        aria-label="your label" href="#"
                      class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold transition-all bg-white border border-gray-300 rounded-lg text-purple-600 hover:text-purple-500">
                      <span>
                        <svg
                          aria-label="gitlab"
                          height="14"
                          viewBox="0 0 24 22"
                          width="14"
                          ><path
                            d="M1.279 8.29L.044 12.294c-.117.367 0 .78.325 1.014l11.323 8.23-.009-.012-.03-.039L1.279 8.29zM22.992 13.308a.905.905 0 00.325-1.014L22.085 8.29 11.693 21.52l11.299-8.212z"
                            fill="currentColor"></path><path
                            d="M1.279 8.29l10.374 13.197.03.039.01-.006L22.085 8.29H1.28z"
                            fill="currentColor"
                            opacity="0.4"></path><path
                            d="M15.982 8.29l-4.299 13.236-.004.011.014-.017L22.085 8.29h-6.103zM7.376 8.29H1.279l10.374 13.197L7.376 8.29z"
                            fill="currentColor"
                            opacity="0.6"></path><path
                            d="M18.582.308l-2.6 7.982h6.103L19.48.308c-.133-.41-.764-.41-.897 0zM1.279 8.29L3.88.308c.133-.41.764-.41.897 0l2.6 7.982H1.279z"
                            fill="currentColor"
                            opacity="0.4"></path>
                        </svg>
                      </span>
                      <span class="ml-3">GitLab</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="rounded-md bg-white shadow-sm">
            <div class="p-4">
              <span class="text-xl font-medium leading-tight text-purple-900">
                Connected with <span class="font-semibold">GitHub</span>
              </span>
              <p class="mt-2 text-sm text-gray-500">
                Michael Andreuzza <a
                  title="link to your page"
        aria-label="your label" href="#"
                  class="text-purple-500 hover:text-gray-500"
                  >(@michael-andreuzza)
                </a> 20 days ago
              </p>
            </div>
            <div
              class="w-full p-4 border-t lg:inline-flex lg:items-end lg:justify-between">
              <div class="mt-3 sm:mt-0 lg:ml-auto">
                <button
                type="submit"
                  class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white transition-all rounded-lg bg-purple-900 hover:bg-purple-800">
                  Disconnect
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
