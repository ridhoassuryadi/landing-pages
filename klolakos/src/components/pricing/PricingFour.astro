---
const plansData = [
  {
    title: "Hobby",
    description:
      "This plan is ideal for individual users and hobbyists who are looking for essential functionalities to support their personal projects and interests.",
    monthlyPrice: "15.00",
    annualPrice: "8.00",
    pricePeriod: "/monthly",
    features: [
      "1 number of users",
      "No storage",
      "Forum support",
      "Limited analytics",
      "No integrations",
      "No customization",
      "99.9% SLA",
    ],
    buttonLabel: "Get started",
    imgSrc: "/assets/hobby.svg",
    category: "For individuals",
    textClass: "text-gray-500",
    accentTextClass: "text-purple-900",
    cardClass: "bg-white",
    buttonClass:
      "flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold transition-all bg-white border border-gray-300 rounded-lg text-purple-600 hover:text-purple-500",
  },
  {
    title: "Pro",
    description:
      "If you're a small business or a startup, this plan is designed to cater to your needs. It offers a balance of essential features and scalability.",
    monthlyPrice: "30.00",
    annualPrice: "15.00",
    pricePeriod: "/monthly",
    features: [
      "Unlimited number of users",
      "Unlimited storage",
      "Advanced support",
      "Advanced analytics",
      "Multiple integrations",
      "Great customization",
      "99.9% SLA",
    ],
    buttonLabel: "Get started",
    imgSrc: "/assets/pro.svg",
    category: "For startups",
    textClass: "text-white",
    accentTextClass: "text-white",
    cardClass: "bg-gradient-to-t from-purple-800 via-purple-700 to-purple-500 ",
    buttonClass:
      "text-sm flex font-semibold items-center justify-center px-4 py-2 rounded-lg transition-all h-10 text-white bg-gradient-to-b from-white/[.105] hover:to-white/[.25] ring-1 ring-inset ring-white/20 to-white/[.15]",
  },
];
---

<section
  class="relative overflow-hidden"
  x-data="{annual: false}">
  <div
    class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24"
    x-data="{duration: 'monthly'}">
    <div class="max-w-2xl ">
      <span class="text-xs font-bold tracking-wide uppercase text-purple-500"
        >Pricing</span
      >
      <p
        class="mt-8 text-4xl font-semibold tracking-tight lg:text-5xl text-purple-900">
        Equip your business
        <span class="md:block md:text-gray-500">
          with world class software</span
        >
      </p>
      <p class="max-w-xl  mt-4 text-base text-gray-500">
        Every plan includes every feature, and can scale as your team does.
      </p>
      <div
        class="w-full border bg-white overflow-hidden inline-flex mt-6 p-0.5 rounded-lg max-w-xs shadow-sm z-0">
        <!-- Monthly Button: Sets 'annual' to false when clicked -->
        <button
          class="block w-full px-8 py-2 text-xs font-medium transition border border-transparent rounded-md text-purple-900"
          :class="{ '  bg-white  text-black': !annual, ' bg-gray-100 border text-purple-900': annual }"
          @click="annual = false"
          type="button">
          Monthly
        </button>
        <!-- Annual Button: Sets 'annual' to true when clicked -->
        <button
          class="block w-full px-8 py-2 text-xs font-medium transition border border-transparent rounded-md text-purple-900"
          :class="{ '  bg-white  text-black': annual, ' bg-gray-100 border text-purple-900': !annual }"
          @click="annual = true"
          type="button">
          Annual
        </button>
      </div>

    </div>
    <div class="grid gap-4 md:grid-cols-2 mt-12 lg:mt-24">
      {
        plansData.map((plan) => (
          <>
            <div>
              <div class="p-6 pt-0 sm:p-8 lg:pt-0">
                <div class="flex-shrink-0 block">
                  <div class="flex items-center">
                    <div>
                      <img
                        class="inline-block w-12 h-12 rounded-full"
                        src={plan.imgSrc}
                        alt={plan.title}
                      />
                    </div>
                    <div class="ml-3">
                      <p class="text-xs font-medium text-gray-500">
                        {plan.category}
                      </p>
                      <p class="text-base font-medium text-purple-900">
                        {plan.title}
                      </p>
                    </div>
                  </div>
                </div>
                <div class="mt-6">
                  <p class="text-sm text-gray-500">
                    This plan is ideal for individual users and hobbyists who
                    are looking for essential functionalities to support
                    projects.
                  </p>
                  <p class="mt-8 text-4xl font-semibold tracking-tight lg:text-5xl text-purple-900">
                    <span>
                      <span x-show="!annual">${plan.monthlyPrice}</span>
                      <span x-show="annual">${plan.annualPrice}</span>
                    </span>
                    <span class="text-xs font-normal tracking-normal text-gray-500">
                      /m
                      <span
                        x-show="annual"
                        style="display: none;">
                        (billed annually)
                      </span>
                    </span>
                  </p>
                </div>
              </div>
              <div
                class={`flex flex-col order-first p-8 py-8 rounded-3xl shadow-sm  lg:order-none ${plan.cardClass}`}>
                <ul
                  class={`grid lg:grid-cols-2 text-sm  gap-3 ${plan.textClass}`}
                  role="list">
                  {plan.features.map((feature) => (
                    <li class="flex items-center gap-2">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="size-4 icon icon-tabler icon-tabler-circle-check-filled"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round">
                        <path
                          stroke="none"
                          d="M0 0h24v24H0z"
                          fill="none"
                        />
                        <path
                          d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                          stroke-width="0"
                          fill="currentColor"
                        />
                      </svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
                <div class=" mt-8">
                  <button
                    class={`w-full ${plan.buttonClass}`}
                    type="submit">
                    {plan.buttonLabel}
                  </button>
                </div>
              </div>
            </div>
          </>
        ))
      }
    </div>
  </div>
</section>
