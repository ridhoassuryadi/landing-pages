---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
      <div class="max-w-3xl mx-auto text-left">
        <div>
          <p
            class="mt-8 text-4xl font-semibold tracking-tight text-balance lg:text-5xl text-purple-900">
            {frontmatter.customer}
          </p>
          <p class="max-w-2xl mt-4 text-base text-gray-500">
            {frontmatter.about}
          </p>
        </div>

      </div>

      <div class="max-w-3xl mx-auto mt-12">
        <div class="pb-12 border-b">
          <p class="text-3xl font-semibold tracking-tight text-balance text-purple-900">
            {frontmatter.feedback}
          </p>
        </div>
        <div class="mt-12">
          <nav aria-label="Progress">
            <ol
              role="list"
              class="overflow-hidden">
              {
                Object.entries(frontmatter.details).map(
                  ([key, value], index) => (
                    <li class="relative pb-10">
                      <div class="relative flex items-start">
                        <span
                          class="flex items-center"
                          aria-hidden="true">
                          <span class="relative z-10 flex items-center justify-center w-10 h-10 text-sm font-semibold transition-all bg-white shadow-sm hover:shadow-none duration-200 border rounded-lg text-purple-600 hover:text-purple-500">
                            {String.fromCharCode(65 + index)}
                          </span>
                        </span>
                        <span class="flex flex-col min-w-0 ml-4">
                          <span class="text-base font-medium text-purple-900">
                            {key}
                          </span>
                          <span class="mt-2 text-sm text-gray-500">
                            {value}
                          </span>
                        </span>
                      </div>
                    </li>
                  )
                )
              }
            </ol>
          </nav>
        </div>
        <div class="prose-styles">
          <slot />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
