---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section>
    <div class="px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
      <div class="max-w-3xl mx-auto mt-12">
        <p class="text-xs font-bold tracking-wide uppercase text-purple-500">
          Written by: {frontmatter.author} on {frontmatter.author} on {
            frontmatter.pubDate.toString().slice(0, 10)
          }
        </p>
        <h1 class="mt-8 text-4xl font-semibold tracking-tight text-purple-900">
          {frontmatter.title}
        </h1>
        <h2 class="mt-2 text-sm font-semibold tracking-tight text-gray-500">
          <em>{frontmatter.description}</em>
        </h2>
        <div class="mt-6">
          <span class="flex flex-wrap items-center gap-1">
            {
              frontmatter.tags.map((tag) => (
                <a
                  class="inline-flex no-underline items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-gray-50 text-purple-900 hover:text-purple-800"
                  href={`/tags/${tag}`}>
                  {tag}
                </a>
              ))
            }

          </span>
        </div>
        <div class="mt-12">
          <div class="prose-styles">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

