---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="lg:p-8 bg-white">
    <div
      class="px-8 py-12 lg:py-32 mx-auto md:px-12 lg:px-16 xl:px-36 2xl:max-w-7xl">
      <div class="prose-styles">
        <div class="flex items-center gap-x-6 not-prose">
          <img
            class="h-16 w-16 rounded-full"
            src={frontmatter.avatar.url}
            alt={frontmatter.avatar.alt}
          />
          <div>
            <h3
              class="text-base font-semibold leading-7 tracking-tight text-zinc-900">
              {frontmatter.name}
            </h3>
            <p class="text-sm font-semibold leading-6 text-accent-500">
              {frontmatter.role}
            </p>
          </div>
        </div>
        <h3>
          {frontmatter.intro}
        </h3>
        <dl class="border-b">
          <div>
            <dt>Education</dt>
            <dd>
              <ul>
                {frontmatter.education.map((item) => <li> {item}</li>)}
              </ul>
            </dd>
          </div>
          <div>
            <dt>Date</dt>
            <dd>
              <ul>
                {frontmatter.experience.map((item) => <li> {item}</li>)}
              </ul>
            </dd>
          </div>
        </dl>

        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
