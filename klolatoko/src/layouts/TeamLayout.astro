---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <div class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-12 lg:py-36">
    <div class="max-w-3xl mx-auto">
      <div class="flex items-center gap-x-6">
        <img
          class="h-16 w-16 rounded-full"
          src={frontmatter.avatar.url}
          alt={frontmatter.avatar.alt}
        />
        <div>
          <h3
            class="text-base font-semibold leading-7 tracking-tight text-gray-900">
            {frontmatter.name}
          </h3>
          <p class="text-sm font-semibold leading-6 text-accent-500">
            {frontmatter.role}
          </p>
        </div>
      </div>
    </div>

    <div class="prose-styles border-t mt-12 pt-6">
      <h3>
        {frontmatter.intro}
      </h3>
      <dl>
        <div>
          <dt>Education</dt>
          <dd>
            <ul>
              {frontmatter.education.map((item) => <li> {item}</li>)}
            </ul>
          </dd>
        </div>
        <div>
          <dt>Date</dt>
          <dd>
            <ul>
              {frontmatter.experience.map((item) => <li> {item}</li>)}
            </ul>
          </dd>
        </div>
      </dl>

      <div class="py-6 border-t"><slot /></div>
    </div>
  </div>
</BaseLayout>
