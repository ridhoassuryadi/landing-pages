---
const { page,  url } = Astro.props;
---

<li class="py-3">
  <a
    class="text-lg text-black capitalize hover:text-accent-500 duration-200"
    href={url}
    title={page}>
    <div class="inline-flex items-center w-full justify-between">
      <p class="text-2xl font-normal tracking-tight font-display">{page}</p>

      <span class="text-xl font-normal tracking-tight font-display">
        &rarr;
      </span>
    </div>
  </a>
</li>
