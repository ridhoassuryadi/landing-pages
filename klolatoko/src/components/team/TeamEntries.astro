---
const { name, role, avatar, url } = Astro.props;
---

<li class="rounded-2xl p-8 border bg-chalk hover:bg-black group duration-300 transition-colors">
  <a
    href={url}
    title={name}
    aria-label={name}>
    <img
      class="object-cover w-16 h-16 rounded-full lg:h-20 lg:w-20 mx-auto"
      src={avatar}
      alt={name}
    />
    <div>
      <p
        class="font-display text-xl leading-7 tracking-tight text-black  group-hover:text-white mt-4">
        {name}
      </p>
    </div>
    <div class="text-base text-zinc-500 mt-4 group-hover:text-white">
      {role}
    </div>
  </a>
</li>
